<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :title, label: "Название" %>
  <%= f.input :author, label: "Автор" %>
  <%= f.input :link, label: "Адрес" %>
  <%= f.input :feed_url, label: "Адрес RSS-ленты" %>
  <%= f.input :approved, label: "Одобрен?" if current_user && current_user.admin? %>
  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, "Добавить блог", class: "btn btn-success" %>
  </div>
<% end %>
