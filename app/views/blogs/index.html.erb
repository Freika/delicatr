<h1>Список блогов</h1>

<table class="table">
<thead>
  <th>Название блога</th>
  <th>Автор</th>
  <th>Состояние</th>
</thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr class="<%= row_color(blog) %>">
        <td><%= link_to blog.title, blog %>
          <% if current_user.admin? %>
          |
            <%= link_to edit_blog_path(blog) do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
            <%= link_to blog, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= blog.author %>
        </td>
        <td>
          <%= is_approved(blog) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin? %>
  <br>
  <%= link_to 'Добавить блог', new_blog_path %>
<% end %>
